{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@services/*": [
        "src/app/shared/services/*"
      ],
      "@utils/*": [
        "src/app/shared/utils/*"
      ],
      "@world/*": [
        "src/app/world/*"
      ],
      "@objmodels/*": [
        "src/public/assets/obj/*"
      ],
      "@images/*": [
        "src/public/assets/images/*"
      ],
      "@mesh/*": [
        "src/app/mesh/*"
      ],
      "@materials/*": [
        "src/app/shared/materials/*"
      ],
      "@boids/*": [
        "src/app/boids/*"
      ],
      "@public/*": [
        "src/public/*"
      ],
      "@achievements/*": [
        "src/app/achievements/*"
      ],
      "@ui/*": [
        "src/app/ui/*"
      ],
      "@voice/*": [
        "src/app/voice/*"
      ]
    },
    "typeRoots": [
      "./src/typings/",
      "./node_modules/@types/"
    ],
    "lib": [
      "dom",
      "es2017",
      "es6",
      "es7"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
